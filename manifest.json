{
    "manifest_version": 3,
    "name": "LeetSync",
    "version": "1.0",
    "description": "Push your LeetCode submissions to GitHub with one click.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://api.github.com/*"
    ],
    "content_scripts": [{
        "matches": ["https://leetcode.com/*"],
        "js": ["content.js"],
        "css": ["ui.css"]
    }],
    "action": {
        "default_popup": "popup.html",
        "default_title": "LeetSync Settings"
    }
}