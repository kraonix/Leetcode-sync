{
    "manifest_version": 3,
    "name": "LeetSync",
    "version": "1.0",
    "description": "Push your LeetCode submissions to GitHub with one click.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://www.leetcode.com/*",
        "https://leetcode.cn/*",
        "https://www.leetcode.cn/*",
        "https://api.github.com/*"
    ],
    "content_scripts": [{
        "matches": [
            "https://leetcode.com/*",
            "https://www.leetcode.com/*",
            "https://leetcode.cn/*",
            "https://www.leetcode.cn/*"
        ],
        "js": ["content.js"],
        "css": ["ui.css"],
        "all_frames": true,
        "run_at": "document_idle"
    }],
    "action": {
        "default_popup": "popup.html",
        "default_title": "LeetSync Settings"
    }
}